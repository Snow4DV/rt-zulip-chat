<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/top_bar_padding_horizontal"
    android:background="@color/top_bar_bw">

    <EditText
        android:id="@+id/search_edit_text"
        style="@style/Theme.ZulipChat.SearchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:paddingVertical="@dimen/top_bar_padding_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/search_edit_text_right_margin"
        app:layout_constraintRight_toLeftOf="@id/search_icon"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.ZulipChat.ImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_search"
        android:contentDescription="@string/search_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>