<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:elevation="@dimen/shimmer_elevation">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:elevation="@dimen/shimmer_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_chat_date_splitter_shimmer" />

            <include layout="@layout/item_message_view_incoming_shimmer" />

            <include
                layout="@layout/item_message_view_incoming_shimmer"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/item_message_view_incoming_shimmer"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <include layout="@layout/item_chat_date_splitter_shimmer" />

            <include layout="@layout/item_message_view_outgoing_shimmer" />

            <include
                layout="@layout/item_message_view_outgoing_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

            <include
                layout="@layout/item_message_view_incoming_shimmer"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

            <include layout="@layout/item_chat_date_splitter_shimmer" />

            <include
                layout="@layout/item_message_view_outgoing_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp" />
        </LinearLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>