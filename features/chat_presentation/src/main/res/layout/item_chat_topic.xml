<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_chat_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_topic_background_view"
        style="@style/Theme.ZulipChat.ClickableWithLimitedBorders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bg_topic_splitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/chat_topic_name_text"
        app:layout_constraintRight_toRightOf="@id/chat_topic_name_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_topic_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center"
        android:paddingHorizontal="@dimen/common_padding"
        android:paddingVertical="@dimen/topic_chat_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/topic_name_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#general" />


</androidx.constraintlayout.widget.ConstraintLayout>